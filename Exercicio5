#include <stdio.h>
#include <string.h>
#include <locale.h>

int main(){
setlocale(LC_ALL,"Portuguese");
char palavra[50];
int i,fim;

printf("Digite uma palavra: ");
fgets(palavra,50,stdin);
fim = 0
for(i=0;i<=49,i++){
if(palavra[i] =='\n' || palavra[i]=='\0'){
break;
}
fim++;
}
fim= fim-1;
for(i=fim;i>=0;i--){
printf("%c"palavra[i]);
}
}
